{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Pato",
  "version": "0.1.0",
  "identifier": "dev.snare.pato",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../src-ui"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window permissions",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:event:allow-listen",
            "core:event:allow-emit"
          ]
        }
      ]
    },
    "windows": [
      {
        "title": "Pato",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}